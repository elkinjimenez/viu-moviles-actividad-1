<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/btn_language"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SmallSp" />

    <LinearLayout
        android:id="@+id/LayoutText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/Layout1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/textOperations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            style="@style/TextOperations"
            android:text=""
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/Layout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn7"
            style="@style/BtnStyle"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:onClick="calculator"
            android:text="@string/_7"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/btn8"
            style="@style/BtnStyle"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:onClick="calculator"
            android:text="@string/_8"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/btn9"
            style="@style/BtnStyle"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:onClick="calculator"
            android:text="@string/_9"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/btnDivide"
            style="@style/BtnAccent"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:onClick="calculator"
            android:text="/"
            tools:ignore="HardcodedText,VisualLintButtonSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/Layout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn4"
            style="@style/BtnStyle"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:onClick="calculator"
            android:text="@string/_4"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/btn5"
            style="@style/BtnStyle"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:onClick="calculator"
            android:text="@string/_5"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/btn6"
            style="@style/BtnStyle"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:onClick="calculator"
            android:text="@string/_6"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/btnMultiply"
            style="@style/BtnAccent"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:onClick="calculator"
            android:text="@string/x"
            tools:ignore="VisualLintButtonSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/Layout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn1"
            style="@style/BtnStyle"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:onClick="calculator"
            android:text="@string/_1"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/btn2"
            style="@style/BtnStyle"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:onClick="calculator"
            android:text="@string/_2"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/btn3"
            style="@style/BtnStyle"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:onClick="calculator"
            android:text="@string/_3"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/btnSubtract"
            style="@style/BtnAccent"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:onClick="calculator"
            android:text="-"
            tools:ignore="HardcodedText,VisualLintButtonSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/Layout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnDelete"
            style="@style/BtnAccent"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/backspace"
            tools:ignore="RtlHardcoded,SpeakableTextPresentCheck,VisualLintButtonSize" />

        <Button
            android:id="@+id/btn0"
            style="@style/BtnStyle"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:onClick="calculator"
            android:text="@string/_0"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/btnDecimal"
            style="@style/BtnAccent"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:onClick="calculator"
            android:text="."
            tools:ignore="HardcodedText,VisualLintButtonSize" />

        <Button
            android:id="@+id/btnAdd"
            style="@style/BtnAccent"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:onClick="calculator"
            android:text="+"
            tools:ignore="HardcodedText,VisualLintButtonSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnClear"
            style="@style/BtnDanger"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="2"
            android:text="@string/btn_clear"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/btnEqual"
            style="@style/BtnAccent"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="2"
            android:text="="
            tools:ignore="HardcodedText,VisualLintButtonSize" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>